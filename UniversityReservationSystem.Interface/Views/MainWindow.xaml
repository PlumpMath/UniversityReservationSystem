<Window x:Class="UniversityReservationSystem.Interface.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:UniversityReservationSystem.Interface.Views"
        xmlns:cal="clr-namespace:MonthCalendar;assembly=MonthCalendar"
        Title="University Reservation System (by Szymon Bartnik for dr Roman Starosolski)"
        Height="650" Width="1000" MinWidth="500" MinHeight="300">
    <TabControl Margin="5">
        <TabItem Header="Reservations">
            <Grid><views:ReservationsTab /></Grid>
        </TabItem>
        <TabItem Header="Rooms">
            <Grid><views:RoomsTab /></Grid>
        </TabItem>
        <TabItem Header="Teachers">
            <Grid><views:TeachersTab /></Grid>
        </TabItem>
        <TabItem Header="Groups">
            <Grid><views:GroupsTab /></Grid>
        </TabItem>
        <TabItem Header="Students">
            <Grid><views:StudentsTab /></Grid>
        </TabItem>
        <TabItem Header="Calendar Test">
            <cal:MonthCalendarControl DisplayMonthChanged="DisplayMonthChanged" x:Name="CalendarControl" Margin="10" />
        </TabItem>
    </TabControl>
</Window>
